<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF140525">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_set_logo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnContact"
        android:layout_width="258dp"
        android:layout_height="65dp"
        android:layout_marginTop="67dp"
        android:drawableEnd="@drawable/ic_arrow_white"
        android:foreground="?selectableItemBackgroundBorderless"
        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:paddingEnd="20dp"
        android:text="Contact us"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnPrivacy"
        android:layout_width="258dp"
        android:layout_height="65dp"
        android:drawableEnd="@drawable/ic_arrow_white"
        android:foreground="?selectableItemBackgroundBorderless"
        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:paddingEnd="20dp"
        android:text="Privacy Policy"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnContact" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnShare"
        android:layout_width="258dp"
        android:layout_height="65dp"
        android:drawableEnd="@drawable/ic_arrow_white"
        android:foreground="?selectableItemBackgroundBorderless"
        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:paddingEnd="20dp"
        android:text="Share"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPrivacy" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnUpgrade"
        android:layout_width="258dp"
        android:layout_height="65dp"
        android:drawableEnd="@drawable/ic_arrow_white"
        android:foreground="?selectableItemBackgroundBorderless"
        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:paddingEnd="20dp"
        android:text="Upgrade"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShare" />


</androidx.constraintlayout.widget.ConstraintLayout>